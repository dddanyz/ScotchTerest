<% if user_signed_in? %>
<p id="notice"><%= notice %></p>

<h1>Pins</h1>

<table>
  <div class="container">
  <div class="row">
    <div class="col-md-4">

  <thead>
    <tr>
      <th>Photo</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>



</table>

<%= link_to 'New Pin', new_pin_path %>
<div class="media">
  <% @pins.each do |pin| %>
    <div class="media-left">
      <!-- Renders image -->
      <%= link_to image_tag(pin.photo.url, class: 'media-object'), pin.photo.url, target: '_blank' %>
    </div>
    <div class="media-body">
      <h4 class="media-heading"><%= pin.description %></h4>
    </div>
    <%= link_to 'Delete', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</div>
<% else %> 
  <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
  <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
<% end %>